<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.sdccd.trana2.MainActivity">

    <TextView
        android:text="hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:background="@android:color/holo_purple" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="18dp"
        android:id="@+id/toggleButton"
        android:shadowColor="@android:color/holo_blue_bright"
        android:shadowRadius="5"
        android:shadowDy="4"
        android:shadowDx="4"
        android:selectAllOnFocus="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:checked="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar"
        android:numStars="7"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginBottom="38dp"
        android:id="@+id/seekBar3"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:thumb="@mipmap/ic_launcher" />

    <Button
        android:text="Press Me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:elevation="24dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:progressTint="@android:color/holo_orange_light"
        android:max="@android:integer/config_longAnimTime"
        android:secondaryProgress="@android:integer/config_mediumAnimTime"
        android:clickable="true"
        android:foregroundTintMode="screen"
        android:scaleX="3"
        android:layout_above="@+id/seekBar3"
        android:layout_alignLeft="@+id/toggleButton"
        android:layout_alignStart="@+id/toggleButton"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="HINT"
        android:layout_above="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/frisk"
        android:id="@+id/imageButton"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_alignBottom="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp" />

    <ImageView
        android:layout_width="70dp"
        app:srcCompat="@drawable/dog"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:isScrollContainer="true"
        tools:rotationX="60"
        android:rotation="60"
        android:layout_height="70dp"
        android:layout_below="@+id/toggleButton"
        android:layout_alignRight="@+id/ratingBar"
        android:layout_alignEnd="@+id/ratingBar"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />

    <CheckBox
        android:text="Check!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:checked="true"
        app:buttonTint="@android:color/holo_orange_light"
        android:elevation="1dp"
        android:layout_alignTop="@+id/toggleButton"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

</RelativeLayout>
